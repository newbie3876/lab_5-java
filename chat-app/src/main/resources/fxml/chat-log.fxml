<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="lt.kostas.chatapp.controller.ChatController"
      spacing="8" prefWidth="700" prefHeight="500" alignment="CENTER">

    <!-- padding kaip elementas - taip patikimiau -->
    <padding>
        <Insets top="10" right="12" bottom="16" left="12"/>
    </padding>

    <ListView fx:id="chatList" maxWidth="1200"/>

    <HBox spacing="8" alignment="CENTER">
        <TextField fx:id="newRoomField" promptText="Naujo kambario pavadinimas"/>
        <Button text="Sukurti kambarį" onAction="#onCreateRoom"/>
    </HBox>

    <HBox spacing="12" alignment="CENTER">
        <TextField fx:id="recipientField" promptText="Vartotojo vardas (privačiai žinutei)"
                   prefWidth="200"/>
        <CheckBox fx:id="privateCheckbox" text="Privati žinutė"/>
    </HBox>

    <HBox alignment="CENTER">
        <ComboBox fx:id="roomSelector" promptText="Pasirinkite kambarį"/>
    </HBox>

    <HBox spacing="8" alignment="CENTER">
        <padding>
            <!-- aiškiai nurodome left/right, kad nebūtų neapibrėžtumo -->
            <Insets top="6" right="6" bottom="8" left="6"/>
        </padding>

        <TextArea fx:id="inputField"
                  promptText="Įveskite žinutę..."
                  wrapText="true"
                  prefRowCount="3"
                  maxWidth="700"/>
        <Button text="Send" onAction="#onSend" prefHeight="48"/>
    </HBox>
</VBox>
